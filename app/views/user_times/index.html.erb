<p id="notice"><%= notice %></p>

<h1>Listing User Times</h1>

<table>
  <thead>
    <tr>
      <th>Current time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_times.each do |user_time| %>
      <tr>
        <td><%= user_time.current_time %></td>
        <td><%= link_to 'Show', user_time %></td>
        <td><%= link_to 'Edit', edit_user_time_path(user_time) %></td>
        <td><%= link_to 'Destroy', user_time, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

